<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recharge"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_title"
            android:textColor="@color/profile_text"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_arrow"
            android:textStyle="bold"
            android:id="@+id/back"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:shape="ring"
        app:contentPaddingTop="20dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:shape="ring"
            app:contentPaddingTop="20dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="10dp"
            android:layout_marginBottom="-20dp"
            app:cardBackgroundColor="@color/profile_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="@string/recharge"
                    android:id="@+id/recharge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"
                    android:paddingLeft="20dp"
                    android:shadowColor="#C5C1C1"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="5"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_title"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:paddingLeft="20dp"
                        android:fontFamily="sans-serif-condensed-light" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/edittext_background"
                        android:inputType="number"
                        android:id="@+id/amount"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/register"
                        android:layout_marginLeft="15dp"/>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>



</LinearLayout>
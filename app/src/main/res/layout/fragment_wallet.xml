<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Wallet"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_title"
            android:textColor="@color/profile_text"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_arrow"
            android:textStyle="bold"/>



    </androidx.cardview.widget.CardView>


   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardCornerRadius="20dp"
       android:shape="ring"
       android:layout_marginTop="10dp"
       app:contentPaddingTop="20dp"
       app:contentPaddingLeft="10dp"
       app:contentPaddingRight="10dp"
       android:layout_marginBottom="-20dp">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardCornerRadius="20dp"
           android:shape="ring"
           app:contentPaddingTop="20dp"
           app:contentPaddingLeft="10dp"
           app:contentPaddingRight="10dp"
           android:layout_marginBottom="-20dp"
           app:cardBackgroundColor="@color/profile_background">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:padding="5dp"
                           android:src="@drawable/wallet"/>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:paddingLeft="5dp">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="@string/balance_title"
                               android:textColor="@color/black"
                               android:textSize="20sp"
                               android:paddingLeft="10dp"
                               android:textStyle="bold"/>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:padding="10dp">
                               <ImageView
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:src="@drawable/ic_rupee"/>
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:text="0"
                                   android:textColor="@color/black"
                                   android:textSize="25dp"
                                   android:paddingLeft="5dp"
                                   android:id="@+id/balance"
                                   android:textStyle="bold"
                                   android:fontFamily="sans-serif-condensed"/>
                           </LinearLayout>
                       </LinearLayout>


                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingRight="10dp"
                       android:text="@string/recharge"
                       android:id="@+id/recharge"
                       android:textColor="@color/colorPrimary"
                       android:textSize="20sp"
                       android:shadowColor="#C5C1C1"
                       android:shadowDx="10"
                       android:shadowDy="10"
                       android:shadowRadius="5"
                       android:fontFamily="sans-serif-condensed-medium"
                       android:textStyle="bold"
                       android:layout_alignParentRight="true"/>
               </RelativeLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="5dp"
                   android:src="@drawable/dotted"
                   android:layerType="software"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardCornerRadius="10dp"
                       android:layout_marginTop="10dp"
                       app:cardElevation="10dp"
                       android:layout_margin="10dp">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/wallet_history"
                           android:textColor="@color/profile_text"
                           android:textSize="20dp"
                           android:gravity="center_vertical"
                           android:paddingLeft="15dp"
                           android:drawableRight="@drawable/next"
                           android:textStyle="bold"/>



                   </androidx.cardview.widget.CardView>


               </LinearLayout>
           </LinearLayout>

       </androidx.cardview.widget.CardView>
   </androidx.cardview.widget.CardView>

</LinearLayout>